<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/block_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/txt_q_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Qusetion"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_q_vote_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.8"
            android:text="2016-10-14" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:minHeight="240dp"
        android:layout_below="@+id/block_title"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.linkwish.widget.FormView
                android:id="@+id/list_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </com.linkwish.widget.FormView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>